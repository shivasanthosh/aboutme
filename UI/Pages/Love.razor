@page "/love"
<div class="valentine-container">
    <h2>Will you be my Valentine?</h2>
    
    @if (!isYes)
    {
        <div class="button-container">
            <button class="btn btn-success btn-lg" @onclick="HandleYes">Yes</button>
            <button class="btn btn-danger btn-lg" 
                    @onmousemove="HandleNoHover" 
                    style="position: relative; left: @noButtonOffsetX.ToString()px; top: @noButtonOffsetY.ToString()px; transition: all 0.2s ease;">
                No
            </button>
        </div>
    }
    else
    {
        <div class="success-message">
            <h3>Yes you are! 💕</h3>
        </div>
    }
</div>

<style>
    .valentine-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 400px;
        gap: 30px;
        padding: 40px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        color: white;
        text-align: center;
    }

    .valentine-container h2 {
        font-size: 2.5rem;
        margin: 0;
        animation: bounce 0.6s ease-in-out;
    }

    .button-container {
        display: flex;
        gap: 20px;
        position: relative;
    }

    .btn {
        padding: 15px 40px;
        font-size: 1.2rem;
        font-weight: bold;
        border: none;
        border-radius: 50px;
        cursor: pointer;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

    .btn-success:hover {
        background-color: #218838;
        transform: scale(1.05);
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    .success-message {
        font-size: 2rem;
        animation: fadeIn 0.5s ease-in;
    }

    @@keyframes bounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }

    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
</style>

@code {
    private bool isYes = false;
    private double noButtonOffsetX = 0;
    private double noButtonOffsetY = 0;
    private Random random = new Random();

    private void HandleNoHover(MouseEventArgs e)
    {
        // Generate random offset to move the button away
        noButtonOffsetX = random.Next(-150, 150);
        noButtonOffsetY = random.Next(-150, 150);
    }

    private void HandleYes()
    {
        isYes = true;
    }
}
